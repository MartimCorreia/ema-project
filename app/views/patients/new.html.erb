<div class="back">
  <div class="pat-new-top">
    <% unless controller_name == 'sessions' && action_name == 'new' || controller_name == 'pages' && action_name == 'intro' %>
      <%= render "shared/navbar" %>
    <% end %>
    <div class="pat-icon d-flex justify-content-center">
      <%= image_tag "paitent-info.png", class:"paitent-report" %>
    </div>
  </div>
  <div class="pat-new-bot">
    <div class="paitent-container d-flex justify-content-center mt-2">
      <div class="paitent-form-box d-flex flex-column align-items-center justify-content-center">
        <h1 class="text-center">Patient Info</h1>
        <%= simple_form_for [@treatment, @patient] do |f| %>
          <div class="d-flex align-items-center mt-3">
            <div class="paitent-form-box-container">
              <div class="">
                <%= f.label :first_name%>
              </div>
              <div class="mb-2">
                <%= f.input_field :first_name, class: 'paitent-form-border' %>
              </div>
            </div>

            <div class="paitent-form-box-container">
              <div class="mb-0">
                <%= f.label :last_name%>
              </div>

              <div class="mb-2">
                <%= f.input_field :last_name, class: 'paitent-form-border'%>
              </div>
            </div>
          </div>
          <div class="d-flex align-items-center mt-3">
            <div class="paitent-form-box-container">
              <div class="mb-0">
                <%= f.label :age%>
              </div>

              <div class="mb-2">
                <%= f.input_field :age, class: 'paitent-form-border'%>
              </div>
            </div>

            <div class="paitent-form-box-container">
              <div class="mb-0">
                <%= f.label :weight%>
              </div>

              <div class="mb-2">
                <%= f.input_field :weight, class: 'paitent-form-border'%>
              </div>
            </div>
          </div>

          <div class="d-flex align-items-center mt-3">
            <div class="paitent-form-box-container">
              <div class="mb-0">
                <%= f.label :occupation%>
              </div>

                <div class="mb-2">
                  <%= f.input_field :occupation, class: 'paitent-form-border'%>
                </div>
            </div>

            <div class="paitent-form-box-container">
              <div class="mb-0">
                <%= f.label :address%>
              </div>

              <div class="mb-2">
                <%= f.input_field :address, class: 'paitent-form-border'%>
              </div>
            </div>
          </div>

          <div class="paitent-form-box-container">
            <div class="mb-0">
              <%= f.label :medical_history%>
            </div>

            <div class="mb-2">
              <%= f.input_field :medical_history, class: 'paitent-form-border'%>
            </div>
          </div>

          <div class="paitent-form-box-container">
            <div class="mb-0">
              <%= f.label :photo%>
            </div>

            <div class="mb-2">
              <%= f.input_field :photo, as: :file, class: 'paitent-form-border'%>
            </div>
          </div>

          <div class="btn-container d-flex align-items-center justify-content-around">
            <%= f.submit :class => 's-btn' %>
            <h6 class="mx-1"> OR </h6>
            <%= link_to "Existing Patient", select_treatment_patients_path(@treatment), class:"s-btn" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
