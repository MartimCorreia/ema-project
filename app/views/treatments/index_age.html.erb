<div class="whole-age-container d-flex flex-column align-items-center justify-content-evenly">

  <div class="patient-category-box d-flex flex-column align-items-center justify-content-center">
    <h1>Patient Category</h1>
    <h5>(Select patient age group)</h5>
  </div>

  <div class="child-or-adult d-flex align-items-center justify-content-center">
    <div class="child-patient-box">
      <div class="top-child-box d-flex align-items-center justify-content-center">
        <%= image_tag "naughty-kids.png" %>
      </div>
      <div class="bot-child-box d-flex align-items-center justify-content-center">
        <h4><%= link_to "Child", treatments_path(age_group: "child") %></h4>
      </div>
    </div>

    <div class="adult-patient-box">
      <div class="top-adult-box d-flex align-items-center justify-content-center">
        <%= image_tag "naughty-adults.png" %>
      </div>
      <div class="bot-adult-box d-flex align-items-center justify-content-center">
        <h4><%= link_to "Adult", treatments_path(age_group: "adult") %></h4>
      </div>
    </div>
  </div>
    <%= image_tag "finger.png" %>
</div>
