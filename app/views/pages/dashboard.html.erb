<div class="container d-flex flex-column dashbody p-0">
  <div class="tab_box">
    <div class="profile-box mt-2">
      <%= cl_image_tag current_user.photo.key, class:"avatar-place-holder" %>
    </div>
  </div>
  <div class="position-dash-content d-flex flex-column mt-3">
    <div class="dashboard-content">
      <div class="d-flex justify-content-around info-box">
        <div class="row">
          <div class="user-info col-sm-1 col-md-12 ">
            <h1 class="text-center dr-h1">Dr.<%=@user.first_name %> <%=@user.last_name %></h1>
            <h6 class="text-center id-h6">Id: <%= @user.id %></h6>
          </div>
        </div>
      </div>
    </div>
    <hr>
    <div class="start-treatment text-center">
      <%= link_to "New treatment", treatments_path, class:"new-treatment-btn"%>
    </div>
    <div class="box d-flex justify-content-center">
      <h3 class="text-center procedures-icon mt-4">My procedures</h3>
    </div>
    <div class="my-procedures col-sm-1 col-md-12 d-flex justify-content-center procedures-box">
      <ul>
        <% @procedures.each do |procedure| %>
          <li>
            <%= link_to "##{procedure.id}.----- #{procedure.created_at}", treatment_path(procedure.treatment) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
